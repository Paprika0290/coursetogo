<?xml version="1.0" encoding="UTF-8"?>


<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
 <mapper namespace="com.spring.coursetogo.mapper.AreaMapper">
 
 	<select id="getRecommendations" parameterType="String" resultType="String">
 	SELECT
  AREA.AREA_NAME
FROM
  AREA
  <trim prefix="WHERE" prefixOverrides="AND |OR">
        <if test="query != null and query !=''">
        
         AND area_name LIKE '%'||#{query}||'%' 
          
          
        </if>
        AND rownum &lt;= 10
      </trim>
 	
 	</select>
 	
 	 </mapper>